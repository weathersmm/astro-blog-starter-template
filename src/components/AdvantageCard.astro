---
export interface Props {
  title: string;
  body: string;
  icon?: string;
  linkLabel?: string;
  linkHref?: string;
}
const { title, body, icon, linkLabel, linkHref } = Astro.props;
---
<div class="advantage-card">
  {icon && <img src={icon} alt="" class="advantage-card-icon" />}
  <h3>{title}</h3>
  <p>{body}</p>
  {linkLabel && linkHref && <a href={linkHref} class="advantage-card-link">{linkLabel}</a>}
</div>
<style>
.advantage-card {
  background: #fff;
  border-radius: 1.2em;
  box-shadow: 0 2px 14px #0ea5e913;
  padding: 1.7em 1.1em;
  text-align: center;
  margin-bottom: 1em;
}
.advantage-card-icon {
  width: 40px;
  height: 40px;
  margin-bottom: 0.7em;
}
.advantage-card-link {
  display: inline-block;
  margin-top: 1em;
  color: var(--primary, #0ea5e9);
  font-weight: 600;
  text-decoration: none;
}
</style>
