---
import Nav from '../components/Nav.astro';
import FeaturesGrid from '../components/FeaturesGrid.astro';
import { getCollection } from 'astro:content';

// Retrieve the enterprise product (slug "angel").
const p = (await getCollection('product')).find((p) => p.data.slug === 'angel')!.data;
---
<Nav />
<section class="container card">
  <h1>InCheck for Enterprise</h1>
  <p class="muted">{p.description}</p>
  <a class="btn" href="/contact">Request Enterprise demo</a>
</section>
<FeaturesGrid features={p.features} />